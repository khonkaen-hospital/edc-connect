{
  "name": "edc-connect",
  "productName": "EdcConnect",
  "version": "1.0.3",
  "description": "electron app connect edc",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "rebuild": "electron-rebuild -f -w serialport",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder -p always",
    "release:mac": "electron-builder --mac -p always",
    "release-win32": "electron-builder --win -p always",
    "release:linux": "electron-builder --linux -p always",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "Sathit Seethaphon",
    "email": "dixonsatit@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khonkaen-hospital/edc-connect.git"
  },
  "build": {
    "appId": "com.kkh.edc-connect",
    "productName": "EdcConnect",
    "copyright": "Copyright Â© Khon Kaen Hospital",
    "mac": {
      "category": "public.app.kkh.edc-connect",
      "type": "distribution",
      "darkModeSupport": true
    },
    "win": {
      "target": [
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "publish": [
      "github"
    ]
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "edc_connect"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "buffer-split": "^1.0.0",
    "chart.js": "^2.8.0",
    "chartjs-color": "^2.3.0",
    "color": "^3.1.2",
    "datatables.net": "^1.10.19",
    "datatables.net-dt": "^1.10.19",
    "electron-log": "^3.0.8",
    "electron-reload": "^1.5.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^5.0.0",
    "jquery": "^3.4.1",
    "knex": "^0.19.4",
    "milligram": "^1.3.0",
    "moment": "^2.24.0",
    "mqtt": "^3.0.0",
    "mysql": "^2.17.1",
    "nprogress": "^0.2.0",
    "pikaday": "^1.8.0",
    "serialport": "^7.1.5",
    "sweetalert2": "^8.17.1",
    "update-electron-app": "^1.5.0"
  },
  "devDependencies": {
    "electron-builder": "^21.2.0",
    "@electron-forge/cli": "6.0.0-beta.45",
    "@electron-forge/maker-deb": "6.0.0-beta.45",
    "@electron-forge/maker-rpm": "6.0.0-beta.45",
    "@electron-forge/maker-squirrel": "6.0.0-beta.45",
    "@electron-forge/maker-zip": "6.0.0-beta.45",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.45",
    "electron": "6.0.12",
    "electron-rebuild": "^1.8.6"
  }
}